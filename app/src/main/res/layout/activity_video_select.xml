<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vide_back_ground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/backgroundtext"/>

    <TextView
        android:id="@+id/video_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="28dp"
        android:text="鬼灭之刃 无限列车篇"
        android:textColor="@color/black"
        android:layout_gravity="center" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewTrain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        android:elevation="0dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp"
        android:layout_marginLeft="3dp"
        android:layout_width="340dp"
        android:layout_height="280dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/video_jj_image"
                    android:layout_width="156.8dp"
                    android:layout_height="209.6dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:id="@+id/video_jj_text"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="12"
                    android:ellipsize="end"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="235dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/video_jj_part1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:background="@color/moccasin"
                    android:textSize="12dp"
                    android:text="播放量"/>
                <TextView
                    android:id="@+id/video_jj_part2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:background="@color/moccasin"
                    android:textSize="12dp"
                    android:text="追番人数"/>
                <TextView
                    android:id="@+id/video_jj_part3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:background="@color/moccasin"
                    android:textSize="12dp"
                    android:text="弹幕总数"/>
        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>


</LinearLayout>



</LinearLayout>