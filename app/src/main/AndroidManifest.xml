        <activity android:name=".activity.HeadImageActivity"> </activity>
        <activity android:name=".activity.VideoSelect"> </activity>
        <activity android:name=".activity.VideoActivity"> </activity>
        <activity android:name=".activity.ceVideoActivity"> </activity>
        <activity android:name=".activity.OtherActivity"> </activity>
        <activity android:name=".activity.FansActivity"> </activity>
        <activity android:name=".activity.FollowActivity"> </activity>
